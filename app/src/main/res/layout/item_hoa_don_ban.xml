<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/item_background">

    <!-- Mã Đơn Hàng -->
    <TextView
        android:id="@+id/tvMaDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Đơn Hàng: DH01"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Mã Khách Hàng -->
    <TextView
        android:id="@+id/tvMaKH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Khách Hàng: KH1"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Ngày Lập -->
    <TextView
        android:id="@+id/tvNgayLap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày Lập: Fri, 15 Nov 2024"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Phương Thức Thanh Toán -->
    <TextView
        android:id="@+id/tvPhuongThucThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương Thức Thanh Toán: Tiền mặt"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Tổng Tiền -->
    <TextView
        android:id="@+id/tvTongTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng Tiền: 90,000 VND"
        android:textSize="16sp"
        android:gravity="end"
        android:layout_marginBottom="8dp"/>

    <!-- Trạng Thái -->
    <TextView
        android:id="@+id/tvTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng Thái: Đã giao"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>
