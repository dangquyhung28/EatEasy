<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background"
    android:padding="16dp">

    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/anhSanPhamImgV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" />

    <!-- Nội dung sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tenSPV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Giá bán -->
        <TextView
            android:id="@+id/giaBanTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá bán"
            android:textSize="16sp" />

        <!-- Mô tả sản phẩm với dấu "..." nếu dài -->
        <TextView
            android:id="@+id/moTaTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Mô tả sản phẩm dài, ví dụ nội dung rất dài và cần rút gọn..."
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Các biểu tượng chỉnh sửa và xóa -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp">

        <!-- Nút trừ -->
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="-"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/white"

            android:layout_marginEnd="4dp" />

        <!-- TextView hiển thị số -->
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginHorizontal="4dp" />

        <!-- Nút cộng -->
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="+"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/white"
            android:layout_marginStart="4dp"
           />

    </LinearLayout>


</LinearLayout>
